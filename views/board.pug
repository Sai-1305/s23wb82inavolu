extends layout

block content
  h1= title
  p Number of rows are: #{query.rows}
  p Number of columns are: #{query.cols}
  - var rows=Number(query.rows);
  - var cols=Number(query.cols);
  - if(!(Number.isInteger(rows) && Number.isInteger(cols)))
    p The entered values are not numbers
  - else if(!(rows>=1 && rows<=10))
    p The number of rows entered is: #{rows}. Please enter a value in the range of 1 to 10.
  - else if(!(cols>=1 && cols<=10))
    p The number of columns entered is: #{cols}. Please enter a value in the range of 1 to 10.
  - else 
      table#outer
        - for(let i=0; i<rows; i++) {
          tr#middle
            - for(let j=0; j<cols; j++) {
                - if(i==j){
                    td= (1)
                - }else if(j<i){
                    td= (0) 
                - }else{
                    td= (j-i+1)
                - }
            - }
        - }
  